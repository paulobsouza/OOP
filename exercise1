YEAR = 2023

class FootballPlayer:
    def __init__(self, name, position, nationality, birth_date, height, weight):
        self._name = name
        self._position = position
        self._nationality = nationality
        self._birth_date = birth_date
        self._height = height
        self._weight = weight
        
        @property
        def name(self):
            return self._name
        
        @name.setter
        def name(self, name):
            self._name = name
            
        @property
        def position(self):
            return self._position
            
        @position.setter
        def position(self, position):
            self._position = position
            
        @property
        def nationality(self):
            return self._nationality
        
        @nationality.setter
        def nationality(self, nationality):
            self._nationality = nationality   
            
        @property
        def birth_date(self):
            return self._birth_date
        
        @birth_date.setter
        def birth_date(self, birth_date):
            self._birth_date = birth_date
        
        @property
        def height(self):
            return self._height
        
        @height.setter
        def height(self, height):
            self._height = height
            
        @property
        def weight(self):
            return self._weight
            
        @height.setter
        def weight(self, weight):
            self._weight = weight
            

        def data_player(self, name, position, nationality, birth_date, height, weight):
            return self._name, self._position, self._nationality, self._birth_date, self._height, self._weight
        
        def age(self, birth_date, YEAR):
            return(self.birth_date - YEAR)
        
        def retiree(self, birth_date, position):
            _age = age(birth_date)
            position = position
            if (_age >= 40) and (position == 'defensor'):
                return ('O jogador está aposentado.')
            if (_age <= 40) and (position == 'defensor'):
                return f'Faltam {40 - _age} para o jogador se aposentar'
            if (_age >= 38) and (position == 'midfielder'):
                return ('O jogador está aposentado.')
            if (_age <= 38) and (position == 'midfielder'):
                return f'Faltam {38 - _age} para o jogador se aposentar'
            if (_age >= 35) and (position == 'attacker'):
                return ('O jogador está aposentado.')
            if (_age <= 35) and (position == 'attacker'):
                return f'Faltam {35 - _age} para o jogador se aposentar'
